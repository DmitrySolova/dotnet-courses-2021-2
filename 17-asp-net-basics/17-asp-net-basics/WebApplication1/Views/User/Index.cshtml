@model IEnumerable<Entities.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Список пользователей</h1>

<table class="table table-striped">
    <thead class="thead-dark">
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Имя</th>
        <th scope="col">Фамилия</th>
        <th scope="col">Дата рождения</th>
        <th scope="col">Возраст</th>
        <th scope="col">Награды</th>
        <th scope="col">Действия</th>
    </tr>
    </thead>
    <tbody>

    @foreach (var user in Model)
    {
        <tr>
            <th scope="row">@user.ID</th>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Birthdate</td>
            <td>@user.Age</td>
            <td>@user.RewardsString</td>
            <td>
                <a class="btn btn-warning btn-sm active" role="button" aria-pressed="true" asp-controller="User" asp-action="EditUser" asp-route-id="@user.ID">Изменить пользователя</a>
                <form asp-action="DeleteUser">
                    <input type="hidden" value="@user.ID" name="id" />

                    <button class="btn btn-danger btn-sm active">Удалить пользователя</button>
                </form>
            </td>
        </tr>
    }

    </tbody>
</table>

<a href="@Url.Action("AddUser", "User")" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Добавить нового пользователя</a>