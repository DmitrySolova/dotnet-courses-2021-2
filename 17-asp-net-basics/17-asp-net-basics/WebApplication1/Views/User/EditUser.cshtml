@model UserEditVievModel

@{
    ViewData["Title"] = "Изменить пользователя";
}

<h1>Изменить пользователя</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUser" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" type="text" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" type="text" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthdate" class="control-label"></label>
                <input asp-for="Birthdate" type="date" class="form-control" />
                <span asp-validation-for="Birthdate" class="text-danger"></span>
            </div>

            <h2>Список наград пользователя</h2>

            <div class="form-group">
                <table class="table table-striped">

                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Название награды</th>
                            <th scope="col">Наградить пользователя?</th>
                        </tr>
                    </thead>
                    <tbody>

                        @for (var i = 0; i < Model.userSelectRewards.Count(); i++)
                        {
                            <tr>
                                <th scope="row">@Model.userSelectRewards[i].Text</th>
                                <td>
                                    <input type="hidden" asp-for="@Model.userSelectRewards[i].Value" />
                                    <input class="form-check-input" asp-for="@Model.userSelectRewards[i].Selected" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="form-group">
                <input type="submit" value="Изменить пользователя" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>