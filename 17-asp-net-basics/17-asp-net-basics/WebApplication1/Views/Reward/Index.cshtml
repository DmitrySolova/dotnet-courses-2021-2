@model IEnumerable<Entities.Reward>

@{
    ViewData["Title"] = "UserRewards";
}

<h1>Список наград</h1>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Название</th>
            <th scope="col">Описание</th>
            <th scope="col">Действия</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var reward in Model)
        {
            <tr>
                <th scope="row">@reward.ID</th>
                <td>@reward.Title</td>
                <td>@reward.Description</td>
                <td>
                    <a class="btn btn-warning btn-sm active" role="button" aria-pressed="true" asp-controller="Reward" asp-action="EditReward" asp-route-id="@reward.ID">Изменить награду</a>
                    <form asp-action="DeleteReward">
                        <input type="hidden" value="@reward.ID" name="id" />

                        <button class="btn btn-danger btn-sm active">Удалить награду</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>

<a href="@Url.Action("AddReward", "Reward")" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Добавить награду</a>